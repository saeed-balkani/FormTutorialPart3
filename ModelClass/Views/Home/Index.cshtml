
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <h1>@ViewBag.message</h1>
    <div class="col-md-4">

        <div class="panel-body">
            <!-- home:اسم کنترلر // index1 :اسم اکشن ریزالت --->
            <form action="/home/index" method="post">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-lg-6 col-form-label">نام کاربری خود را وارد کنید</label>
                        <input type="text" name="username" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="col-lg-6 col-form-label">پسورد خود را وارد کنید</label>
                        <input type="text" name="password" class="form-control" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="لاگین" class="btn btn-success" />
                    </div>
                </div>
            </form>
        </div>



    </div>
    <div class="col-md-4">
        <h2>Get more libraries</h2>
        <p>NuGet is a free Visual Studio extension that makes it easy to add, remove, and update libraries and tools in Visual Studio projects.</p>
        <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301866">Learn more &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Web Hosting</h2>
        <p>You can easily find a web hosting company that offers the right mix of features and price for your applications.</p>
        <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a></p>
    </div>

</div>


